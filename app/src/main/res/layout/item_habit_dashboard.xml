<?xml version="1.0" encoding="utf-8"?>
<!-- item_habit_dashboard.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Habit Category Icon -->
        <TextView
            android:id="@+id/tvHabitIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circle_category_bg"
            android:gravity="center"
            android:text="ðŸš­"
            android:textSize="20sp"
            tools:text="ðŸš­" />

        <!-- Habit Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Habit Name -->
            <TextView
                android:id="@+id/tvHabitName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quit Smoking"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Quit Smoking" />

            <!-- Progress Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvCurrentStreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day 15"
                    android:textColor="@color/success_green"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="Day 15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="â€¢"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvProgressInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="50% to goal"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    tools:text="50% to goal" />

                <TextView
                    android:id="@+id/tvMoneySaved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$75 saved"
                    android:textColor="@color/teal_accent"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="$75 saved" />

            </LinearLayout>

        </LinearLayout>

        <!-- Today's Check-in Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCheckIn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:text="âœ…"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/btn_checkin_selector"
            tools:text="âœ…" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
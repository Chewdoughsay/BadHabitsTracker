<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Disabled State -->
    <!-- When button is disabled (form validation fails), show muted gray -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/gray_light" />
        </shape>
    </item>

    <!-- Pressed State -->
    <!-- When user is actively pressing the button, show darker orange -->
    <item android:state_pressed="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:angle="135"
                android:startColor="@color/orange_dark"
                android:endColor="@color/orange_darker"
                android:type="linear" />
        </shape>
    </item>

    <!-- Normal/Enabled State -->
    <!-- Default state when form is valid and button is ready to use -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:angle="135"
                android:startColor="@color/orange_primary"
                android:endColor="@color/orange_dark"
                android:type="linear" />
        </shape>
    </item>

</selector>